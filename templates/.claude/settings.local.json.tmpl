{
  "permissions": {
    "allow": [
      "Bash(git:*)",
      "Bash(node:*)",
      "Bash(npm:*)",
      "Bash(docker:*)",
      "Bash(docker-compose:*)",
      "Bash({{TASKMASTER_CLI}}:*)",
      "Bash(npx task-master:*)",
      "Bash(python:*)",
      "Bash(pytest:*)",
      "Bash(jest:*)"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          { "type": "command", "command": "bash .claude/hooks/on-posttooluse.sh" }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          { "type": "command", "command": "bash .claude/hooks/gate-enforcer.sh" }
        ]
      }
    ]
  }
}